# MemAG Environment Configuration
# Copy this file to .env and fill in your actual values

# ===========================
# LLM Configuration
# ===========================
# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=2000

# Anthropic Configuration (Optional)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-opus-20240229

# Default LLM Provider (openai or anthropic)
DEFAULT_LLM_PROVIDER=openai

# ===========================
# Vector Database Configuration
# ===========================
VECTOR_DB_TYPE=chroma
VECTOR_DB_PATH=./data/vector_store
VECTOR_DB_COLLECTION_NAME=memag_memories
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSION=1536

# ===========================
# Gmail API Configuration
# ===========================
GMAIL_CREDENTIALS_PATH=./credentials/gmail_credentials.json
GMAIL_TOKEN_PATH=./credentials/gmail_token.json
GMAIL_SCOPES=https://www.googleapis.com/auth/gmail.readonly,https://www.googleapis.com/auth/gmail.send

# ===========================
# API Configuration
# ===========================
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true
API_WORKERS=1
API_LOG_LEVEL=info

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=*
CORS_ALLOW_HEADERS=*

# ===========================
# Application Configuration
# ===========================
APP_NAME=MemAG
APP_VERSION=0.1.0
APP_ENVIRONMENT=development
DEBUG=true

# ===========================
# Memory Configuration
# ===========================
MEMORY_RETRIEVAL_TOP_K=5
MEMORY_SIMILARITY_THRESHOLD=0.7
MEMORY_MAX_CONTEXT_LENGTH=4000

# ===========================
# Agent Configuration
# ===========================
AGENT_MAX_ITERATIONS=10
AGENT_TIMEOUT_SECONDS=300
SUPERVISOR_AGENT_MODEL=gpt-4-turbo-preview

# ===========================
# Logging Configuration
# ===========================
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE_PATH=./logs/memag.log
LOG_ROTATION=1 day
LOG_RETENTION=30 days

# ===========================
# Security
# ===========================
SECRET_KEY=your_secret_key_here_change_in_production
API_KEY_HEADER=X-API-Key
ALLOWED_API_KEYS=key1,key2,key3

# ===========================
# Rate Limiting
# ===========================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# ===========================
# External Services
# ===========================
# Search API (Optional)
SEARCH_API_KEY=your_search_api_key_here
SEARCH_ENGINE_ID=your_search_engine_id_here

# ===========================
# Database (Optional - for metadata)
# ===========================
DATABASE_URL=sqlite:///./data/memag.db
# For PostgreSQL: postgresql://user:password@localhost/memag
